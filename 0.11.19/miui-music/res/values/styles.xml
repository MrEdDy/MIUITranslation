<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="MarqueeTextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="PickerTitleNameStyle">
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:textColor">@color/ringtone_picker</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    <style name="TabStyle">
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">15.0</item>
    </style>
</resources>